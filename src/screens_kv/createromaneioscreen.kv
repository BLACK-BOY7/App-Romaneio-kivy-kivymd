<CreateRomaneioScreen>:
    name: "create-romaneio"
    md_bg_color: app.theme_cls.backgroundColor
    
    CustomTopAppBar:
        CustomTopAppBarLeadingButtonContainer:
            CustomButtonIcon:
                icon: "chevron-left"
                on_release: app.root.change_screen("romaneios-bitolado", "right")

        CustomTopAppBarTitle:
            text: "Criar Romaneio"
            bold: True

    MDAnchorLayout:
        anchor_x: "center"
        anchor_y: "center"

        MDBoxLayout:
            orientation: "vertical"
            
            padding: dp(4)
            spacing: dp(10)

            adaptive_height: True
            pos_hint: {"center_x": 0.5,"center_y": 0.5}

            MDTextField:
                mode: "outlined"

                MDTextFieldLeadingIcon:
                    icon: "account"

                MDTextFieldHintText:
                    text: "Nome do cliente"
                    
            MDTextField:
                mode: "outlined"

                MDTextFieldLeadingIcon:
                    icon: "truck"

                MDTextFieldHintText:
                    text: "Nome do motorista"

            MDTextField:
                mode: "outlined"

                MDTextFieldLeadingIcon:
                    icon: "tree"

                MDTextFieldHintText:
                    text: "Esp√©cie de madeira"

            ThemedButton:
                radius: dp(8)

                theme_height: "Custom"
                theme_width: "Custom"
                height: dp(48)
                size_hint_x: .80

                pos_hint: {'center_x': 0.5,'center_y': 0.5}

                ThemedButtonText:
                    text: "Criar"
                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                    bold: True