<HomeScreen>:
    name: "home"
    md_bg_color: self.theme_cls.backgroundColor

    CustomTopAppBar:
        CustomTopAppBarTitle:
            text: "App Version 0.0.1"
            theme_text_color: "Primary"
            halign: "left"
            bold: True
            
        CustomTopAppBarTrailingButtonContainer:
            CustomButtonIcon:
                icon: "theme-light-dark"
                on_release: app.change_theme()

    MDAnchorLayout:
        anchor_x: "center"
        anchor_y: "center"

        MDBoxLayout:
            orientation: "vertical"
            
            padding: dp(4)
            spacing: dp(10)

            adaptive_height: True
            pos_hint: {'center_x': 0.5,'center_y': 0.5}


            ThemedButton:
                style: "outlined"
                theme_width: "Custom"
                size_hint_x: .94

                height: dp(52)
                radius: root._button_radius

                pos_hint: {'center_x': 0.5}

                on_release: print("MDButton-1")

                ThemedButtonText:
                    text: "Romaneio Toda Largura"
                    bold: True
                    pos_hint: {'center_x': 0.5, "center_y": 0.5}


            ThemedButton:
                style: "outlined"
                theme_width: "Custom"
                size_hint_x: .94

                height: dp(52)
                radius: root._button_radius

                pos_hint: {'center_x': 0.5}

                on_release: app.root.change_screen("romaneios-bitolado")

                ThemedButtonText:
                    text: "Romaneio Bitolado"
                    bold: True

                    pos_hint: {'center_x': 0.5, "center_y": 0.5}


            ThemedButton:
                style: "outlined"
                theme_width: "Custom"
                size_hint_x: .94

                height: dp(52)
                radius: root._button_radius

                pos_hint: {'center_x': 0.5}

                on_release: print("MDButton-1")

                ThemedButtonText:
                    text: "Estoque"                    
                    bold: True

                    pos_hint: {'center_x': 0.5, "center_y": 0.5}