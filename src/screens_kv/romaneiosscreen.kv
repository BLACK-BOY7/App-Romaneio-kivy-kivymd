<RomaneiosScreen>:
    name: "romaneios-bitolado"
    md_bg_color: app.theme_cls.backgroundColor
    
    MDBoxLayout:
        orientation: "vertical"

        CustomTopAppBar:
            pos_hint: {"center_x": 0.5, "top": 1}

            CustomTopAppBarLeadingButtonContainer:
                CustomButtonIcon:
                    icon: "chevron-left"
                    on_release: app.root.change_screen("home", "right")

            CustomTopAppBarTitle:
                text: "Romaneios"
                bold: True
            
            CustomTopAppBarTrailingButtonContainer:
                CustomButtonIcon:
                    icon: "theme-light-dark"
                    on_release: app.change_theme()

        RomaneioWidgetFilter:

        ScrollView:
            effect_cls: "ScrollEffect"
            RomaneiosWidgets:
                id: romaneio_widgets

    ThemedButton:
        style: "elevated"
        radius: dp(8)
        pos_hint: {"right": 0.98, "top": 0.10}

        on_release: app.root.change_screen("create-romaneio")
        ThemedButtonIcon:
            icon: "plus"

        ThemedButtonText:
            text: "Novo"
            bold: True


<RomaneiosWidgets>:
    spacing: dp(2)
    padding: dp(2)


<RomaneioWidgetInfo>:
    radius: dp(4)
    on_release: app.root.change_screen("detais-romaneio")

    MDListItemLeadingIcon:
        icon: "notebook-edit"

    MDListItemHeadlineText:
        text: root.client_name

    MDListItemSupportingText:
        text: root.wood_type

    MDListItemTertiaryText:
        text: root.creatin_date

    MDListItemTrailingIcon:
        icon: "chevron-right"


<RomaneioWidgetFilter>:
    orientation: "horizontal"

    size_hint_y: None
    size_hint_x: 0.98

    height: dp(46)
    padding: dp(2)
    spacing: dp(2)
    
    radius: root._radius

    pos_hint: {'center_x': 0.5}

    ThemedButton:
        style: "outlined"
        theme_width: "Custom"
        size_hint_x: 0.28
        radius: [dp(8), dp(0), dp(0), dp(8)]

        pos_hint: {'center_y': 0.5}

        ThemedButtonText:
            text: "Especie"

            bold: True
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    ThemedButton:
        style: "outlined"
        theme_width: "Custom"
        size_hint_x: 0.28
        radius: dp(0)
        pos_hint: {'center_y': 0.5}

        ThemedButtonText:
            text: "Cliente"

            bold: True
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    ThemedButton:
        style: "outlined"
        theme_width: "Custom"
        size_hint_x: 0.28
        radius: dp(0)
        pos_hint: {'center_y': 0.5}

        ThemedButtonText:
            text: "Data"

            bold: True
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    ThemedButton:
        style: "outlined"
        theme_width: "Custom"
        size_hint_x: 0.16
        radius: [dp(0), dp(8), dp(8), dp(0)]
        pos_hint: {'center_y': 0.5}

        ThemedButtonIcon:
            icon: "filter-remove"
            
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
